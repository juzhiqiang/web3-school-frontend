# Environment Variables for Web3 School Frontend

# WalletConnect Project ID (获取地址: https://cloud.walletconnect.com/)
VITE_WALLET_CONNECT_PROJECT_ID=your_walletconnect_project_id

# 本地开发网络设置
VITE_ENABLE_LOCALHOST=true
VITE_LOCAL_CONTRACT_ADDRESS=0x3AEc18B0101d56a75f788a6C1F24eF4D5661888d

# Smart Contract Addresses - Mainnet
VITE_MAINNET_YD_TOKEN_SWAP_ADDRESS=0x3AEc18B0101d56a75f788a6C1F24eF4D5661888d
VITE_YD_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
VITE_COURSE_NFT_ADDRESS=0x0000000000000000000000000000000000000000
VITE_COURSE_MARKETPLACE_ADDRESS=0x0000000000000000000000000000000000000000

# Smart Contract Addresses - Sepolia Testnet
VITE_SEPOLIA_YD_TOKEN_SWAP_ADDRESS=0x3AEc18B0101d56a75f788a6C1F24eF4D5661888d
VITE_SEPOLIA_YD_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
VITE_SEPOLIA_COURSE_NFT_ADDRESS=0x0000000000000000000000000000000000000000
VITE_SEPOLIA_COURSE_MARKETPLACE_ADDRESS=0x0000000000000000000000000000000000000000

# Local Network Configuration (Hardhat)
VITE_HARDHAT_RPC_URL=http://127.0.0.1:8545
VITE_HARDHAT_CHAIN_ID=31337

# Local Network Configuration (Ganache)
VITE_GANACHE_RPC_URL=http://127.0.0.1:7545
VITE_GANACHE_CHAIN_ID=1337

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_IPFS_GATEWAY=https://ipfs.io/ipfs/

# Network Configuration
VITE_DEFAULT_CHAIN_ID=1
VITE_ENABLE_TESTNETS=true

# Development Settings
VITE_ENABLE_MOCK_DATA=true
VITE_APP_ENV=development

# Analytics (可选)
VITE_GA_TRACKING_ID=
VITE_HOTJAR_ID=

# RPC URLs (可选，用于自定义RPC)
VITE_MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
VITE_SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
